<!DOCTYPE html>
<html>
<head>
  <title>WOD Score</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="user_nav">
		<% if current_user %>
			<p><%= link_to "HOME", '/' %></p>
	    	Welcome, <%= current_user.name %>!
			<%= link_to "Sign Out", signout_path %>
	  	<% else %>
	    	<%= link_to "Sign in with Twitter", "/auth/twitter" %>
	  	<% end %>
	</div>
	
<%= yield %>

</body>
</html>
